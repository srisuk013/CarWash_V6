<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeMaterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Toolbar" parent="MatchWrap">
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/ToolbarThemeWhite</item>
    </style>

    <style name="ToolbarThemeWhite" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="RelativeLayout" parent="MatchMatch">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="LinearLayoutVertical" parent="WrapWrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/base_pow_four</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutButtonPair" parent="MatchWrap">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/base_pow_five</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextViewMediumGray" parent="WrapWrap">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TextViewMediumBlack" parent="WrapWrap">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewLargeApplication" parent="WrapWrap">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="TextViewLargeApplicationSub" parent="TextViewLargeApplication">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/base_pow_three</item>
        <item name="android:layout_marginTop">@dimen/base_pow_four</item>
    </style>

    <style name="TextViewLarge" parent="WrapWrap">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginTop">@dimen/base_pow_two</item>
    </style>
    <style name="not">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_margin">@dimen/base_pow_three</item>
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:elevation">@dimen/base_pow_two</item>
        <item name="android:drawablePadding">@dimen/base_pow_three</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">@dimen/et_width</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_margin">@dimen/base_pow_three</item>
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:elevation">@dimen/base_pow_two</item>
        <item name="android:drawablePadding">@dimen/base_pow_three</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextPhoneNumber" parent="EditText">
        <item name="android:drawableStart">@drawable/ic_phone_gray</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">10</item>
        <item name="android:digits">0123456789</item>
    </style>

    <style name="EditTextPassword" parent="EditText">
        <item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890</item>
        <item name="android:maxLength">12</item>
        <item name="android:drawableStart">@drawable/ic_key_gray</item>
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ButtonBlueShort">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/bt_short_width</item>
        <item name="android:layout_height">@dimen/bt_height</item>
        <item name="android:background">@drawable/shape_bt_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonWhiteShort" parent="ButtonBlueShort">
        <item name="android:background">@drawable/shape_bt_white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonBlueLong" parent="ButtonBlueShort">
        <item name="android:layout_width">@dimen/bt_long_width</item>
    </style>

    <style name="ImageViewLogo">
        <item name="android:layout_width">@dimen/img_logo_width</item>
        <item name="android:layout_height">@dimen/img_logo_height</item>
        <item name="android:src">@drawable/img_logo_white</item>
    </style>
    <style name="ImageViewLogoBlue">
        <item name="android:layout_width">@dimen/img_logo_width</item>
        <item name="android:layout_height">@dimen/img_logo_height</item>
        <item name="android:src">@drawable/img_logo_blue</item>
    </style>


    <style name="ImageViewPhoto">
        <item name="android:layout_width">@dimen/img_photo</item>
        <item name="android:layout_height">@dimen/img_photo</item>
        <item name="android:src">@drawable/ic_user</item>
    </style>

    <style name="ImageViewPhotoSub" parent="ImageViewPhoto">
        <item name="android:layout_width">@dimen/img_photo_sub</item>
        <item name="android:layout_height">@dimen/img_photo_sub</item>
    </style>

    <style name="ImageViewCamera">
        <item name="android:layout_width">@dimen/ic_camera</item>
        <item name="android:layout_height">@dimen/ic_camera</item>
        <item name="android:background">@drawable/shape_camera</item>
        <item name="android:src">@drawable/ic_camera_white</item>
    </style>

    <style name="ImageViewArrowBack">
        <item name="android:layout_width">@dimen/ic_base</item>
        <item name="android:layout_height">@dimen/ic_base</item>
        <item name="android:src">@drawable/ic_arrow_back_white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/base_pow_four</item>
    </style>

    <style name="ImageViewToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ic_base</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ImageViewIcon">
        <item name="android:layout_width">@dimen/ic_base</item>
        <item name="android:layout_height">@dimen/ic_base</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/base_pow_four</item>
    </style>

    <style name="ImageViewTogglePassword" parent="WrapWrap">
        <item name="android:layout_alignEnd">@+id/et_password</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_three</item>
        <item name="android:elevation">@dimen/base_pow_two</item>
    </style>

    <style name="ImageViewLogoPlaceHolder">
        <item name="android:layout_width">@dimen/base_two_hundred</item>
        <item name="android:layout_height">@dimen/base_two_hundred</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/base_forty</item>
        <item name="android:src">@drawable/img_logo_blue</item>
    </style>

    <style name="CardViewImageView" parent="WrapWrap">
        <item name="android:layout_margin">@dimen/base_pow_three</item>
        <item name="cardCornerRadius">60dp</item>
        <item name="cardElevation">@dimen/base_pow_three</item>
    </style>

    <style name="CardViewButton" parent="WrapWrap">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/base_pow_three</item>
        <item name="android:layout_marginTop">@dimen/base_pow_five</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_three</item>
        <item name="android:layout_marginBottom">@dimen/base_pow_three</item>
        <item name="cardCornerRadius">@dimen/base_pow_three</item>
        <item name="cardElevation">@dimen/base_pow_two</item>
    </style>

    <style name="CardViewButtonPair" parent="CardViewButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/base_pow_two</item>
        <item name="android:layout_marginTop">@dimen/base_pow_three</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_two</item>
        <item name="android:layout_marginBottom">@dimen/base_pow_three</item>
    </style>

    <style name="CardViewRemoveImage" parent="WrapWrap">
        <item name="android:layout_margin">@dimen/base_pow_three</item>
        <item name="android:visibility">invisible</item>
        <item name="cardCornerRadius">@dimen/ic_card</item>
        <item name="cardElevation">@dimen/base_pow_three</item>
    </style>

<!--    todo progress dialog-->
    <style name="ProgressBar" parent="WrapWrap">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="RecyclerView" parent="MatchMatch">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/base_hundred</item>
    </style>

    <style name="FloatingActionButtonBase" parent="WrapWrap">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="elevation">@dimen/base_pow_two</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FloatingActionButton" parent="FloatingActionButtonBase">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_four</item>
        <item name="android:layout_marginBottom">@dimen/base_hundred</item>
    </style>

    <style name="StyleCardView" parent="MatchWrap">
        <item name="android:layout_marginStart">@dimen/base_pow_five</item>
        <item name="android:layout_marginTop">@dimen/base_pow_four</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_five</item>
        <item name="cardCornerRadius">@dimen/base_pow_three</item>
        <item name="cardElevation">@dimen/base_pow_three</item>
        <item name="contentPadding">@dimen/base_pow_four</item>
    </style>

    <style name="StyleCardViewService">
        <item name="android:layout_marginStart">@dimen/base_pow_three</item>
        <item name="android:layout_marginTop">@dimen/base_pow_three</item>
        <item name="android:layout_marginEnd">@dimen/base_pow_three</item>
        <item name="android:layout_marginBottom">@dimen/base_pow_three</item>
        <item name="android:layout_width">@dimen/service_width</item>
        <item name="android:layout_height">@dimen/service_height</item>
        <item name="cardCornerRadius">@dimen/base_pow_three</item>
        <item name="cardElevation">@dimen/base_pow_two</item>
    </style>

</resources>
